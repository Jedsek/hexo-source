#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/../../../../../browser-sync@2.29.3/node_modules"
else
  export NODE_PATH="$NODE_PATH:$basedir/../../../../../browser-sync@2.29.3/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../browser-sync@2.29.3/node_modules/browser-sync/dist/bin.js" "$@"
else
  exec node  "$basedir/../../../../../browser-sync@2.29.3/node_modules/browser-sync/dist/bin.js" "$@"
fi
